<div class="dashboard-component bottom">
    <div class="title-bar">
        <div class="component-content">
            <span class="uppercase">{{ heading is defined ? heading: 'Earnings' }}</span>
        </div>
    </div>
    <!--Recent order table-->
    <table class="table table-striped">
        <thead>
            <tr>
                <th width="10%">Date</th>
                <th width="10%" align="center">Type</th>
                <th width="30%">Description</th>
                <th width="10%" align="right">Amount</th>
                <th width="10%" align="center">Status</th>
            </tr>
        </thead>
        <tbody>
            {% for earning in earnings %}
                <tr>
                    <td valign="top">{{ earning.dateAdded|date('m/d/Y') }}</td>
                    <td align="center" valign="top">{{ earning.earningType }}</td>
                    <td valign="top">
                        {{ include('YilinkerCoreBundle:Widget:earning_description.html.twig') }}
                    </td>
                    <td valign="top" align="right">
                        {{ earning.amount < 0 ? '-': '+' }} P {{ earning.amount|number_format(2) }}
                    </td>
                    <td valign="top" align="center">
                        {{ earning.status(true) }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="align-center mrg-top-20">
        {{ include('YilinkerCoreBundle:Default:pagination.html.twig', {totalResults: total, perPage: 10}) }}
    </div>
</div>