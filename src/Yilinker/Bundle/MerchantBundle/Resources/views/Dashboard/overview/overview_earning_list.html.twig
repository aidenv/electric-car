<div class="dashboard-component bottom">
    <div class="title-bar">
        <div class="component-content">
            <span class="uppercase">Earnings</span>
        </div>
    </div>
    <!--Recent order table-->
    <table class="table table-striped">
        <thead>
        <tr>
            <th width="10%">Date</th>
            <th width="10%" align="center">Type</th>
            <th width="30%">Description</th>
            <th width="10%" align="right">Amount</th>
            <th width="10%" align="center">Status</th>
        </tr>
        </thead>
        {% if earnings|length > 0 %}
            <tbody>
            {% for earning in earnings %}
                <tr>
                    <td valign="top">{{ earning.dateAdded|date('m/d/Y') }}</td>
                    <td align="center" valign="top">{{ earning.earningType }}</td>
                    <td valign="top">
                        {{ include('YilinkerCoreBundle:Widget:earning_description.html.twig') }}
                    </td>
                    <td valign="top" align="right">
                        {{ earning.amount < 0 ? '-': '+' }} P {{ earning.amount|number_format(2) }}
                    </td>
                    <td valign="top" align="center">
                        {{ earning.status(true) }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        {% endif %}
        <tfoot>
        <tr>
            {% if earnings|length > 0 %}
                <td colspan="6" align="right">
                    <a href="{{ path('dashboard_earnings')}}">
                        <button class="button button-basic small button-rounded-side">View All</button>
                    </a>
                </td>
            {% else %}
                <td colspan="6" align="center">
                    No transaction available
                </td>
            {% endif %}
        </tr>
        </tfoot>
    </table>
</div>
