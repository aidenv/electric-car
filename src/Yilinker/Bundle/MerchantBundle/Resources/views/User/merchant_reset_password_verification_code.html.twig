{% extends 'base.html.twig' %}

{% block title %}
    Reset Password Verification | YilinkerOnline.com
{% endblock %}

{% block stylesheets %}
    <style>
        .login-tab-panel{
            display: block !important;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login">
        <a href="#" class="me logo-link" width="57" height="57"></a>
        <div class="bg"></div>

        <div class="login-wrapper login-buyer">
            <div class="align-center">
                <a href="/">
                    <img src="{{ asset('images/logo-icon.png') }}" class="logo" />
                </a>
            </div>
            <div class="tagline align-center">
                <div class="">
                    All in one place
                </div>
            </div>
            <div class="login-tab-selection">
                <a id="sign-in-tab" data-href="reset-password" class="active single">Verify Number</a>
            </div>
            <div class="form-segment">
                {{{ csrf : csrfToken, expiration : expiration } | react('forgotPasswordCodeVerification') }}
            </div>
            <div class="footer-wrapper align-center">
                Copyright 2015 YiLinker. All Rights Reserved
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('reactjs/build/indexMap.js') }}"></script>
    <script src="{{ asset('js/src/reactRender.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/src/login-merchant.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/src/vendor/forms.js') }}"></script>

{% endblock %}
