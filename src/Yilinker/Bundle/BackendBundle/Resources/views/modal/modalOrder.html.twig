<!-- Modal Order Type One-->
<div class="ui modal large modal-box modal-order-one">
    <a class="close"><i class="icon-times"></i></a>
    <div class="header">Order Details</div>
    <div class="content">
      <div class="row">
        <div class="group form">
            <div class="row">
              <div class="col-md-6 md-box zeb">
                {% for i in 1..5 %}
                  <div>
                    <div class="col-md-6"><strong>Sample</strong></div>
                    <div class="col-md-6">KD3-38u123pi</div>
                  </div>
                {% endfor %}
              </div>
              <div class="col-md-1"></div>
              <div class="col-md-5 md-box">
                <div>
                  <div class="col-md-6">Total Amount</div>
                  <div class="col-md-6 txtright">PHP 999.99</div>
                </div>
                <div>
                  <div class="col-md-6">YiLinker Charge</div>
                  <div class="col-md-6 txtright">PHP 999.99</div>
                </div>
                <div>
                  <div class="col-md-6">Payment Method Charge</div>
                  <div class="col-md-6 txtright">PHP 999.99</div>
                </div>
                <div class="net">
                  <div class="col-md-6">Net</div>
                  <div class="col-md-6 txtright">PHP 999.99</div>
                </div>
              </div>
            </div>
          </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <table class="table basic table-vertical-align-top">
            <tr>
                <th>Order Product ID</th>
                <th>Name</th>
                <th>Seller</th>
                <th>Order Quantity</th>
                <th>Unit Price</th>
                <th>Shipping fee</th>
                <th>Total Amount</th>
                <th>Net</th>
                <th>Status</th>
                <th></th>
                <th></th>
            </tr>
            {% for i in 1..5 %}
              <tr>
                <td>209</td>
                <td>apple</td>
                <td>man of effin steel</td>
                <td>1</td>
                <td>PHP 2,121.00</td>
                <td>PHP 0.00</td>
                <td>PHP 2,121.00</td>
                <td>PHP 2,025.20</td>
                <td>On-going</td>
                <td>
                  <button class="button tiny blue modal-order-two-trigger">
                    view
                  </button>
                </td>
                <td>
                  <button class="button tiny cancel">
                    <i class="item-icon icon-times"></i>
                  </button>
                </td>
              </tr>
            {% endfor %}
          </table>
        </div>
      </div>
      <div class="row">
        <div class="message-box red">
          <p>This transaction has been flagged for further review.</p>
        </div>
      </div>
    </div>
    <div class="actions align-right">
      <div class="button blue">Unflag Transaction</div>
      <div class="button confirm modal-cancel-buyer-transaction-trigger">Void Transaction</div>
      <div class="button cancel" data-remodal-action="close">Cancel</div>
    </div>
</div>

