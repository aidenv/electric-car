{% extends 'YilinkerFrontendBundle:Base:base.html.twig' %}

{% block title %}
    How to Register | Make A Wish
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/static.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
            {{ include('YilinkerFrontendBundle:MakeAWish:breadcrumb.html.twig') }}
            <div class="wrapper">
                <div class="row">
                    <div class="col-xs-3 col-xl-2">
                        <h4 class="bold mrg-bt-20">Promo Mechanics:</h4>
                        <ul class="list-unstyled list-sidemenu">
                            <li>
                                <a href="{{ path('about_make_a_wish') }}">
                                    About the Promo
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('how_to_join_make_a_wish') }}">
                                    How to Join
                                </a>
                            </li>
                            <li>
                                <a class="active">
                                    How to Register
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('how_to_create_an_entry_make_a_wish') }}">
                                    How to Create an Entry
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('criteria_for_claiming_the_prize_make_a_wish') }}">
                                    Criteria for Claiming the Prize
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-xs-9 col-xl-10">
                        <div class="content-container">
                            <div class="content-segment">
                                <h3 class="bold mrg-bt-20">
                                    How to register:
                                </h3>
                                <div class="content-description">
                                    <ol>
                                        <li>
                                           Pre-hype, Yilinker will publicize the promo on social media, informing fans to “Watch this space” for a promo to go live on the November 16th launch date.
                                        </li>
                                        <li>
                                            On the Launch date, YiLinker will prompt fans to register on the Rafflecopter application, for the chance to take home a special prize.
                                        </li>
                                        <li>
                                            <p class="mrg-bt-10">
                                                Once on the application, fans will be asked to connect their Facebook account in order to register. The following details will be gathered during registration:
                                            </p>
                                            <ol class="lower-alpha bold">
                                                <li>
                                                    Name
                                                </li>
                                                <li>
                                                    Email Address
                                                </li>
                                            </ol>
                                        </li>
                                        <li>
                                            Upon clicking the “register using Facebook” option, fans will be asked to give Facebook permission to access their public profile data.  This allows for a one-to-one user-to-entry authentication, preventing multiple entries and multiple registrations.
                                        </li>
                                        <li>
                                            Once the user has given permission for the app to access their public profile data, they will be directed to the main app screen, which allows them to proceed with the entry process.
                                        </li>
                                        <li>
                                            All information gathered will be kept confidential.
                                        </li>
                                    </ol>
                                </div>
                            </div>
                            <div class="content-segment">
                                <h4 class="bold mrg-bt-20 align-center">
                                    <a href="{{ path('how_to_create_an_entry_make_a_wish') }}" class="sky-blue-color">How to Create an Entry?</a>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

