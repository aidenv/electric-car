<div id="conversation-container">
</div>
<div class="ui modal tiny coupled-delete delete-conversation-thread">
    <a data-remodal-action="close" class="close"><i class="icon-times"></i></a>
    <div class="content align-center">
        <h4 class="ui header">
            <i class="icon icon-trash"></i>
                <div class="content">
                    Delete  Conversation?
                <div class="sub-header">Are you sure you want to delete this conversation?</div>
            </div>
        </h4>
    </div>
    <div class="actions">
        <button class="button cancel">Cancel</button>
        <button class="button red submit-to-success positive">Delete</button>
    </div>
</div>

<div class="loader-overlay message hidden thread-loader">
    <div class='ui centered large inline loader'>&nbsp;</div>
</div>
